<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#666"
        android:background="#333"
        android:dividerHeight="1dp"
        android:padding="0dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/left_drawer"
        android:layout_alignParentBottom="true"
         android:background="#333"
 >

        <TextView
            android:id="@+id/drawerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.facebook.widget.ProfilePictureView
            android:id="@+id/profilePictureView1"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/drawerName">
        </com.facebook.widget.ProfilePictureView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/usedCoupons"
            android:layout_below="@+id/drawerName"
            android:layout_toLeftOf="@+id/profilePictureView1"
            android:layout_toStartOf="@+id/profilePictureView1" />

    </RelativeLayout>

</RelativeLayout>